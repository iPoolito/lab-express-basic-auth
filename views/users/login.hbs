<div>
  <h2>Iniciar sesion</h2>

  <form action='/login' method='POST'>
    <h2>Username</h2>

    <input type='text' name='username' placeholder='username' />

    <h2>Password</h2>

    <input type='password' name='password' placeholder='password' />

    <button type='submit'>
      Iniciar Sesion
    </button>

    {{#if errorMessage}}
      <p style='color: red'>{{errorMessage}}</p>
    {{/if}}

  </form>

</div>